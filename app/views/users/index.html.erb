<!DOCTYPE html>
<html>
<head>
  <title>Writers</title>
</head>


<body id="writers-body">
<div class="row">
  <div class="box">
    <div class="col-lg-12">
      <hr>
      <h2 class="intro-text text-center"> <strong>Writers</strong> </h2>
      <hr>
    </div>

    <% @users.each do |user| %>

    <div class="col-sm-3 text-center">
      <%= link_to user do %>
      <%= image_tag user.profile_photo.detail.url, class: "writers-img" %>
      <% end %>

      <%= link_to user do %>
      <h6 id="writers-storyAuthor"><%= user.name %></h6>
      <% end %>
    </div>
    <% end %>
    <!-- <div class="clearfix"></div> -->
    <!-- </div> -->
  </div>
</div>

</body>
</html>