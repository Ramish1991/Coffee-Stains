<!DOCTYPE html>
<html>
<head>
  <title>Story Board</title>
</head>

<!-- Background image -->
<body class="storyboard-body">


  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <hr>
        <h2 class="intro-text text-center">Story
          <strong>Board</strong>
        </h2>
        <hr>
      </div>
      <% @stories.each do |story| %> 
      <%= link_to story do %>

      <div class="col-sm-4 text-center">
        <%= image_tag story.image.detail.url, class: "" %>
        <h3><%= story.title %>
          <small><%= story.summary %></small>
        </h3>
        <% end %>
      </div>
      <% end %>
      <!-- <div class="clearfix"></div> -->
      <!-- </div> -->
    </div>

    
  </body>
  </html>
